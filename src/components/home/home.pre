@import "../../styles/all.pre";

.root {
  position: absolute;
  top: 45%;
  right: 0;
  left: 0;
  margin: 0 auto;
  z-index: 3;
  background-color: fade(@bg-light, 60);
  width: 90%;
  @media(@tablet) {
    width: 300px;
  }
  .name,
  .desc {
    margin-top: 0;
    margin-bottom: 0;
    font-family: @font-sans;
    font-weight: 500;
    text-align: center;
    text-transform: uppercase;
  }
}