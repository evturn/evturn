@import '../../styles/variables.less';

.backdrop {
  composes: clearfix from '../../styles/list.pre';
  min-height: 100vh;
  margin: 0 auto;
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  background-position-x: 50%;
  @media(@tablet) {
    background-position-y: 40%;
    background-position-x: 0%;
  }
}