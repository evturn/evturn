@import '../../styles/all.pre';

.root {
  height: 100vh;
  width: 100vw;
}

.banner {
  position: absolute;
  top: 35%;
  right: 0;
  left: 0;
  margin: 0 auto;
  z-index: 3;
  background-color: fade(@bg-light, 60);
  width: 90%;
  @media(@tablet) {
    top: 45%;
    width: 300px;
  }
}

.title,
.description {
  composes: font-sans;
  margin-top: 0;
  margin-bottom: 0;
  font-weight: 500;
  text-align: center;
  text-transform: uppercase;
}